<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <Version>1.0.0</Version>
	  <PackageOutputPath>TcpNuget\</PackageOutputPath>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <DocumentationFile>$(MSBuildProjectName).xml</DocumentationFile>
  </PropertyGroup>

	<ItemGroup>
		<None Include="$(MSBuildProjectName).xml" Pack="true" PackagePath="TcpNuget\" />
	</ItemGroup>

	<ItemGroup>
    <Folder Include="Configuration\Publisher\" />
    <Folder Include="Configuration\Receiver\" />
  </ItemGroup>

	<ItemGroup>
		<None Remove="TcpNuget721.xml" />
		<None Remove="ServiceMeshHelper.xml" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Connections.Abstractions" Version="7.0.11" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
  </ItemGroup>

	<ItemGroup>
		<Folder Include="Extensions\" />
	</ItemGroup>
	
</Project>
